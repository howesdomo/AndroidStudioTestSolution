<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.howe.ir.MainActivity">

    <EditText
        android:id="@+id/edtFrequency"
        android:layout_width="96dp"
        android:layout_height="39dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.017" />

    <TextView
        android:id="@+id/lblFrequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:layout_marginTop="13dp"
        android:text="FREQ"
        app:layout_constraintRight_toLeftOf="@+id/edtFrequency"
        app:layout_constraintTop_toTopOf="@+id/edtFrequency" />

    <Button
        android:id="@+id/btnTVPower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="387dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="电视机电源"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnTVSoundMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="12dp"
        android:text="音量-"
        app:layout_constraintLeft_toLeftOf="@+id/btnTVPower"
        app:layout_constraintTop_toBottomOf="@+id/btnTVPower" />

    <Button
        android:id="@+id/btnTVSoundPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:text="音量+"
        app:layout_constraintLeft_toRightOf="@+id/btnTVSoundMinus"
        app:layout_constraintTop_toTopOf="@+id/btnTVSoundMinus" />

    <Button
        android:id="@+id/btnTVChangeSources"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-4dp"
        android:layout_marginTop="0dp"
        android:text="输入选择"
        app:layout_constraintLeft_toRightOf="@+id/btnTVSoundPlus"
        app:layout_constraintTop_toTopOf="@+id/btnTVSoundPlus" />

    <Button
        android:id="@+id/btnTVSilence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:text="静音"
        app:layout_constraintLeft_toRightOf="@+id/btnTVChangeSources"
        app:layout_constraintTop_toTopOf="@+id/btnTVChangeSources" />


    <Button
        android:id="@+id/btnSTBPower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="机顶盒电源"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnSTBSoundMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:layout_marginRight="17dp"
        android:text="音量-"
        app:layout_constraintBottom_toTopOf="@+id/btnSTBOK"
        app:layout_constraintRight_toLeftOf="@+id/btnSTBOK" />

    <Button
        android:id="@+id/btnSTBSoundPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:layout_marginLeft="16dp"
        android:text="音量+"
        app:layout_constraintBottom_toTopOf="@+id/btnSTBOK"
        app:layout_constraintLeft_toRightOf="@+id/btnSTBOK" />

    <Button
        android:id="@+id/btnSTBOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="OK"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.586" />

    <Button
        android:id="@+id/btnSTBReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="17dp"
        android:layout_marginTop="23dp"
        android:text="返回"
        app:layout_constraintRight_toLeftOf="@+id/btnSTBOK"
        app:layout_constraintTop_toBottomOf="@+id/btnSTBOK" />

    <Button
        android:id="@+id/btnSTBBackspace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="23dp"
        android:text="退格键"
        app:layout_constraintLeft_toRightOf="@+id/btnSTBOK"
        app:layout_constraintTop_toBottomOf="@+id/btnSTBOK" />

    <Button
        android:id="@+id/btnSTBLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="17dp"
        android:layout_marginTop="0dp"
        android:text="左"
        app:layout_constraintRight_toLeftOf="@+id/btnSTBOK"
        app:layout_constraintTop_toTopOf="@+id/btnSTBOK" />

    <Button
        android:id="@+id/btnSTBUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="0dp"
        android:text="上"
        app:layout_constraintBottom_toTopOf="@+id/btnSTBOK"
        app:layout_constraintLeft_toLeftOf="@+id/btnSTBOK" />

    <Button
        android:id="@+id/btnSTBRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="0dp"
        android:text="右"
        app:layout_constraintLeft_toRightOf="@+id/btnSTBOK"
        app:layout_constraintTop_toTopOf="@+id/btnSTBOK" />

    <Button
        android:id="@+id/btnSTBDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="11dp"
        android:text="下"
        app:layout_constraintLeft_toLeftOf="@+id/btnSTBOK"
        app:layout_constraintTop_toBottomOf="@+id/btnSTBOK" />

    <Button
        android:id="@+id/btnSTBHomePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="17dp"
        android:layout_marginTop="117dp"
        android:text="主页"
        app:layout_constraintRight_toLeftOf="@+id/btnSTBOK"
        app:layout_constraintTop_toBottomOf="@+id/btnSTBOK" />

    <Button
        android:id="@+id/btnSTBMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="0dp"
        android:text="菜单"
        app:layout_constraintLeft_toRightOf="@+id/btnSTBHomePage"
        app:layout_constraintTop_toTopOf="@+id/btnSTBHomePage" />

    <Button
        android:id="@+id/btnSTBMouse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="123dp"
        android:layout_marginTop="0dp"
        android:text="鼠标模式"
        app:layout_constraintLeft_toRightOf="@+id/btnSTBHomePage"
        app:layout_constraintTop_toTopOf="@+id/btnSTBHomePage" />

</android.support.constraint.ConstraintLayout>
